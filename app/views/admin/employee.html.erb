<%= render 'layouts/admin_render' %>

<% emparr = Employee.all %>
    <div class="container">
        <table class="table table-dark table-striped table-bordered table-hover tble-pos">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Active</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <% emparr.each do |employee| %>
                <tr>
                    <td>
                        <%= link_to employee.name, admin_employee_details_url(:id => employee.id), method: :post %>
                    </td>
                    <td>
                        <%= employee.email%>
                    </td>
                    <td>
                        <%= employee.phone%>
                    </td>
                    <td>
                        <%= employee.active == true ? "yes" : "no" %>
                    </td>
                    <td>
                        <%= link_to "Edit", admin_edit_url(:id => employee.id) %>
                    </td>
                    <td>
                        <%= link_to "delete", admin_delete_path(:id => employee.id), method: :delete,
                                                          data: { confirm: "Do you want to delete?" } %>

                    </td>
                </tr>
                <% end %>
        </table>
        <%= link_to "Add Employee", admin_add_employee_url , class: "btn button btn-pos" %>
    </div>